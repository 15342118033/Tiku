<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitc.welcome.GuideActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide_viewpager"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guide_lv"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/lv_iv_01"
            android:src="@mipmap/page_indicator_unfocused" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/lv_iv_02"
            android:src="@mipmap/page_indicator_focused"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/lv_iv_01" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/lv_iv_03"
            android:src="@mipmap/page_indicator_focused"
            android:layout_toEndOf="@+id/lv_iv_02"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</RelativeLayout>
