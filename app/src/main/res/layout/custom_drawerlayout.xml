<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_left">
    <!--主布局-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff">

    </LinearLayout>
    <!--侧滑菜单-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/sp_lv_left"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_gravity="left">
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/sp_lv_rl"
            android:background="@mipmap/home_nav_title">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sp_animll_id"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/hugh"
                    android:id="@+id/sp_uspic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_usname"
                    android:layout_gravity="center_horizontal"
                    android:text="用户名"
                    android:background="#fff"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <ListView
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:id="@+id/sp_lv_001"
            android:layout_marginTop="32dp"
            android:background="#fff"
            android:divider="#dfdfdf"
            android:dividerHeight="0.5dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:cacheColorHint="@android:color/transparent"
            ></ListView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sp_tv_set"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/ic_settings_grey600_18dp"
                android:drawablePadding="8dp"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:text="设置"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sp_tv_exit"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/ic_exit_to_app_grey600_18dp"
                android:drawablePadding="8dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:text="退出"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
